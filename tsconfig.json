{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "ESNext.Decorators"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
